%h1 Users

%table
  %tr
    %th Nickname
    %th First name
    %th Last name
    %th Age
    %th Country
    %th Actions
  - @users.each do |user|
    %tr
      %td= user.nickname
      %td= user.first_name
      %td= user.last_name
      %td= user.age
      %td= user.country
      %td
        = link_to 'Show', admin_user_path(user)
        = link_to 'Edit', edit_admin_user_path(user)
        = link_to 'Destroy', admin_user_path(user), method: :delete, data: {confirm: 'You sure about this?'}
