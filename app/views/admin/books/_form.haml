=semantic_form_for([:admin, @book], html: {multipart: true}) do |f|
  =f.input :avatar
  =f.input :title
  =f.input :author_id, as: :select, collection: Author.all
  =f.input :description
  =f.input :publisher_id, as: :select, collection: Publisher.all
  =f.input :edition, as: :select, collection: Book.editions_for_select
  =f.input :genre
  =f.actions do
    =f.action :submit
    =f.action :cancel
