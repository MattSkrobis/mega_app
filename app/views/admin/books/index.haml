%h1
  Books
  = link_to "Add Book", new_admin_book_path, class: 'btn btn-primary'

%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Author
      %th Description
      %th Genre
      %th Publisher
      %th Edition
      %th Action
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.description
        %td= book.genre
        %td= book.publisher
        %td= book.edition
        %td
          = link_to 'Show', admin_book_path(book), class: 'btn'
          = link_to 'Edit', edit_admin_book_path(book), class: 'btn'
          = link_to 'Destroy', admin_book_path(book), method: :delete, data: {confirm: 'Do you really want to hurt me?'}, class: 'btn btn-danger'
