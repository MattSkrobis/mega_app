%h1 Books

%table
  %tr
    %th Title
    %th Author
    %th Description
    %th Genre
    %th Publisher
    %th Edition
    %th Action
  - @books.each do |book|
    %tr
      %td= book.title
      %td= book.author
      %td= book.description
      %td= book.genre
      %td= book.publisher
      %td= book.edition
      %td
        = link_to 'Show', admin_book_path(book)
        = link_to 'Edit', edit_admin_book_path(book)
        = link_to 'Destroy', admin_book_path(book), method: :delete, data: {confirm: 'Do you really want to hurt me?'}
