%h1 Book

%b Title
=@book.title
%br

%b Author
=@book.author
%br

%b Description
=@book.description
%br

%b Publisher
=@book.publisher
%br

%b Genre
=@book.genre
%br

%b Edition
=@book.edition
%br


=semantic_form_for([@book, @comment]) do |f|
  =f.input :description
  =f.input :rating
  =f.input :user_id, as: :select, collection: User.all
  =f.submit

%h2 Comments about #{@book.title}
%table
  %tr
    %th Description
    %th Rating
    %th User
    %th Actions
  - @book.comments.each do |comment|
    %tr
      %td= comment.description
      %td= comment.rating
      %td= comment.user
      %td
        = link_to "Edit", edit_book_comment_path(@book, comment)
        = link_to 'Destroy', book_comment_path(@book, comment), method: :delete, data: {confirm: 'are you sure?'}
