= search_form_for @q do |f|
  = f.label :title_cont
  = f.search_field :title_cont
  = f.submit

%h1 Books

%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Author
      %th Description
      %th Genre
      %th Publisher
      %th Edition
      %th Action
  %tbody
    - @books.each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.description
        %td= book.genre
        %td= book.publisher
        %td= book.edition
        %td
          = link_to 'Show', book_path(book), class: 'btn'

= paginate @books
